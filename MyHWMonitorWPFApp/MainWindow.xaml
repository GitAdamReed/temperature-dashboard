<Window x:Class="MyHWMonitorWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Temperature Dashboard" Height="800" Width="1000">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <!-- Sensor Lists -->
        <GroupBox Header="CPU" Grid.Column="0" Grid.Row="0">
            <ListView Name="CpuSensorListView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Sensor" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="Value (°C)" DisplayMemberBinding="{Binding Value}" Width="100"/>
                        <GridViewColumn Header="Min (°C)" DisplayMemberBinding="{Binding Min}" Width="100"/>
                        <GridViewColumn Header="Max (°C)" DisplayMemberBinding="{Binding Max}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        <GroupBox Header="GPU" Grid.Column="0" Grid.Row="1">
            <ListView Name="GpuSensorListView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Sensor" DisplayMemberBinding="{Binding Name}" Width="150"/>
                        <GridViewColumn Header="Value (°C)" DisplayMemberBinding="{Binding Value}" Width="100"/>
                        <GridViewColumn Header="Min (°C)" DisplayMemberBinding="{Binding Min}" Width="100"/>
                        <GridViewColumn Header="Max (°C)" DisplayMemberBinding="{Binding Max}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        <!-- Charts -->
        <GroupBox Header="CPU Package Temp (°C)" Grid.Column="1" Grid.Row="0">
            <lvc:CartesianChart Series="{Binding CpuChartSeries}" Height="200" Margin="0,0,0,20">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Time" LabelFormatter="{Binding TimeFormatter}">
                        <lvc:Axis.MinValue>
                            <Binding Path="CpuXAxisMin" />
                        </lvc:Axis.MinValue>
                        <lvc:Axis.MaxValue>
                            <Binding Path="CpuXAxisMax" />
                        </lvc:Axis.MaxValue>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Temperature (°C)" MinValue="0" MaxValue="100"/>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </GroupBox>
    </Grid>
</Window>
